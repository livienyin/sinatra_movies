<h2>
  <%= @result["Title"] %>
  (<%= @result["Year"] %>)
</h2>
<% if @result["Poster"].nil? || @result["Poster"] == "N/A" %>
<img src="" alt ="No Image Found" title="No Poster Found">
<% else %>
<img src="<%= @result["Poster"] %>" 
alt="Movie poster for <%= @result["Title"] %>" 
title="Movie poster for <%= @result["Title"] %>">
<% end %>
<p>
  <%= @result["Plot"] %>
</p>
<dl>
  <dt>
    Rating
  </dt>
  <dd>
    <%= @result["Rated"] %>
  </dd>
  <dt>
    Runtime
  </dt>
  <dd>
    <%= @result["Runtime"] %>
  </dd>
  <dt>
    Genre
  </dt>
  <dd>
    <%= @result["Genre"] %>
  </dd>
  <dt>
    IMDB Rating
  </dt>
  <dd>
    <%= @result["imdbRating"] %>
  </dd>
  
  <dt>
    Rotten Tomatoes Rating
  </dt>
  <dd>
    <%= @result["tomatoRating"] %>
  </dd>
   
  <dt>
    Actor<%= @actors.length > 1 ? "s" : "" %>
  </dt>
  <dd>
    <ul>
      <% @actors.each do |actor| %>
      <li><%= actor %></li>
      <% end %>
    </ul>
  </dd>
  
  <dt>
    Director<%= @directors.length > 1 ? "s" : "" %>
  </dt>
  <dd>
    <ul>
      <% @directors.each do |director| %>
      <li><%= director %></li>
      <% end %>
    </ul>
  </dd>
</dl>
<% unless @results.empty? %>
  <h3>Related movies</h3>
  <%= erb :results %>
<% end %>
<% unless @query.nil? || @query.empty? %>
  <a href="/search?q=<%= URI.escape(@query) %>">
    Back to search results for <q><%= @query %></q>
  </a>
<% end %>

