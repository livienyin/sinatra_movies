<!doctype html>
<html>
  <head>
    <title>
      <%= @page_title %>
    </title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">

    <meta charset="utf-8">
  </head>
  <body>
    <div id="outer-container">
      <div id="inner-container">
        <header>    
          <h1>
            <%= @app_name %>
          </h1>
          <%= erb :search_form %>
        </header>
        <div id="main">
          <%= yield %>
        </div>
        <footer>
          Copyright &copy; <%= Date.today.year %> <%= @app_name %>
        </footer>
      </div>
    </div>
  </body>
</html>
